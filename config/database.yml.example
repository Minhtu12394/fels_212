default: &default
  adapter: mysql2
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  timeout: 5000
  username: <%= ENV["DATABASE_USERNAME"] %>
  password: <%= ENV["DATABASE_PASSWORD"] %>

development:
  <<: *default
  database: <%= ENV["DATABASE_DEVELOPMENT"] %>

test:
  <<: *default
  database: <%= ENV["DATABASE_TEST"] %>

production:
  <<: *default
  database: <%= ENV["DATABASE_PRODUCTION"] %>
