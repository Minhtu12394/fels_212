<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Framgia E-Learning System", root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
        <% if user_signed_in?  %>
          <li><%= link_to t(:categories), "#" %></li>
          <li><%= link_to t(:word_list), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile), user_path(current_user) %></li>
              <li><%= link_to t(:settings), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:log_out), destroy_user_session_path, method: :delete %>
              </li>
        <% else %>
            <li><%= link_to t(:log_in), new_user_session_path %></li>
            <li><%= link_to t(:sign_up), new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
