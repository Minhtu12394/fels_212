  <div class="list-group-item">
    <div class="row">
      <div class="col-md-3">
        <b><%= category.name %></b>
      </div>
      <div class="col-md-6"><%= category.description %></div>
      <div class="col-md-3">
        <%= link_to category, class: "btn btn-primary" do %>
          <i class="glyphicon glyphicon-list-alt"></i> <%= t :details %>
        <% end %>
        <%= link_to category_lessons_path(category),
          method: :post, class: "btn btn-primary" do %>
          <i class="glyphicon glyphicon-plus"></i> <%= t :start_lesson %>
        <% end %>
      </div>
    </div>
  </div>
