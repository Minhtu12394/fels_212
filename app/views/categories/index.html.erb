<div class="row">
  <div class="col-md-3 col-md-offset-3">
    <%= search_form_for @q do |f| %>
      <%= f.text_field :name_cont, placeholder: t(:search_by_category),
        class: "form-control" %>
      <%= button_tag type: "submit", class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-search"></span> <%= t :search %>
      <% end %>
    <% end %>
  </div>
</div>
<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="col-md-3">
      <h3 class="panel-title"><b><%= t :name %></b></h3>
    </div>

    <div class="col-md-6">
      <h3 class="panel-title"><b><%= t :description %></b></h3>
    </div>

    <div class="col-md-3">
      <h3 class="panel-title"><b><%= t :action %></b></h3>
    </div>
  </div>
  <% if @categories.any? %>
    <div class="list-group">
      <%= render @categories %>
    </div>
  <div class="text-center">
    <%= paginate @categories %>
  </div>
<% end %>
</div>

