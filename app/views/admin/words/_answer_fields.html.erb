<p class="fields">
    <%= f.text_field :content, id: "answer-form" %>
    <%= f.label :correct %>
    <%= f.check_box :correct, id: "check_box" %>
    <%= f.hidden_field :_destroy, class: "destroy" %>
    <%= link_to "#", class: "btn-remove-answer" do %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end %>
</p>
