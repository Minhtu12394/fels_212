<% @users.each_with_index do |user, index| %>
  <tr>
    <td><%= create_index params[:page], index, Settings.user_per_page %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td>
      <%= link_to edit_admin_user_path(user), remote: true ,class: "btn btn-primary" do %>
        <span class="glyphicon glyphicon-edit" ></span> <%= t :edit %>
      <% end %>

      <% unless current_user? user %>
        <%= link_to admin_user_path(user), class: "btn btn-danger",
          method: :delete, data: { confirm: t(:sure)} do %>
            <span class="glyphicon glyphicon-remove"></span> <%= t :delete %>
          <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
